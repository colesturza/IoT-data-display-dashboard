    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "services/dashboard/app.py",
                "FLASK_ENV": "development",
                "MONGO_USERNAME": "dev",
                "MONGO_PASSWORD": "dev",
                "MONGO_HOSTNAME": "0.0.0.0",
                "MONGO_DATABASE": "dev",
                "MONGO_PORT": "27017",
                "SECRET_KEY": "dev",
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": true
        }
    ]
}